<mvc:View controllerName="gestionempleados.controller.Menu"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

<Page title="{i18n>TituloMenu}">
<content>

   <Panel headerText="{i18n>TituloPanel1Menu}" expandable="true" expanded="true">
    <content>

    <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
    headerImage="sap-icon://add-employee"
	press="NavToCrearEmpleados" 
   >
		<TileContent footer="Crear Empleado" />
	</GenericTile>

<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
    headerImage="sap-icon://employee-lookup"
	press="NavToVerEmpleados" 
   >
		<TileContent footer="Ver Empleados" />
	</GenericTile>

    </content>
   </Panel>

    <Panel headerText="{i18n>TituloPanel2Menu}" expandable="true" expanded="true">
<content>

<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
    headerImage="sap-icon://signature"
	press="NavToPedidos" 
   >
		<TileContent footer="Firmar Pedido" />
	</GenericTile>


    </content>
   </Panel>

</content>

</Page>
   
    
</mvc:View>